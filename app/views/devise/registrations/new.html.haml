%h2= t('.sign_up')

-# FIXME Change to remote, handle errors and responses
= form_with model: resource, scope: resource_name, url: registration_path(resource_name), local: true, id: 'user' do |f|
  = render 'devise/shared/error_messages', resource: resource

  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, autocomplete: 'email'

  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :password
    - if @minimum_password_length
      %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
    %br
    = f.password_field :password, autocomplete: 'off'

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, autocomplete: 'off'

  .actions
    = f.submit t('.sign_up')

= render 'devise/shared/links'
