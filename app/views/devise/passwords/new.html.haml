%h2= t('.forgot_your_password')

-# FIXME Change to remote, handle errors and responses
= form_with model: resource, scope: resource_name, url: password_path(resource_name), local: true, id: 'user' do |f|
  = render 'devise/shared/error_messages', resource: resource

  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, autocomplete: 'email'

  .actions
    = f.submit t('.send_me_reset_password_instructions')

= render 'devise/shared/links'
